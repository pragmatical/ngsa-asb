{
    "name": "NGSA-Client-TooFewRequests",
    "location": "eastus",
    "properties": {
        "displayName": "NGSA-Client-TooFewRequests",
        "description": "Loderunner sent < 5 requests",
        "severity": 3,
        "enabled": true,
        "windowSize": "PT10M",
        "evaluationFrequency": "PT10M",
        "autoMitigate": false,
        "scopes": [
            "/subscriptions/${SUBSCRIPTION_GUID}/resourceGroups/${Ngsa_Log_Analytics_RG}/providers/Microsoft.OperationalInsights/workspaces/${Ngsa_Log_Analytics_Name}"
        ],
        "criteria": {
            "allOf": [
                {
                    "query": "loderunner_CL | summarize cnt=count() by bin(TimeGenerated,1m), Zone_s, Server_s | project-rename AggregatedValue=cnt",
                    "timeAggregation": "Average",
                    "metricMeasureColumn": "AggregatedValue",
                    "dimensions": [
                        {
                            "name": "Zone_s",
                            "operator": "Include",
                            "values": [
                                "*"
                            ]
                        },
                        {
                            "name": "Server_s",
                            "operator": "Include",
                            "values": [
                                "*"
                            ]
                        }
                    ],
                    "operator": "LessThan",
                    "threshold": 5,
                    "failingPeriods": {
                        "minFailingPeriodsToAlert": 5,
                        "numberOfEvaluationPeriods": 5
                    }
                }
            ]
        },
        "muteActionsDuration": "PT30M",
        "actions": {
            "actionGroups": [
                "/subscriptions/${SUBSCRIPTION_GUID}/resourceGroups/${Ngsa_Log_Analytics_RG}/providers/microsoft.insights/actionGroups/${Ngsa_Action_Group_Name}"
            ]
        }
    }
}